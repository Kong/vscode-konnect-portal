{
  "name": "vscode-konnect-portal",
  "displayName": "Konnect Dev Portal Toolkit",
  "description": "Live preview for MDC and Markdown files with dev portal integration",
  "icon": "images/icon.png",
  "version": "1.0.4",
  "publisher": "kong",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kong/vscode-konnect-portal.git"
  },
  "homepage": "https://github.com/Kong/vscode-konnect-portal",
  "bugs": {
    "url": "https://github.com/Kong/vscode-konnect-portal/issues"
  },
  "author": {
    "name": "Kong Inc.",
    "url": "https://konghq.com/"
  },
  "license": "Apache-2.0",
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=22.20.0",
    "pnpm": ">=10.18.3",
    "vscode": ">=1.105.0"
  },
  "scripts": {
    "dev": "vite build --watch --mode development",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vscode-test",
    "watch": "vite build --watch",
    "build:webview": "rimraf src/webview/webview.js && tsc --project tsconfig.webview.json",
    "build": "pnpm run build:webview && vite build --mode production",
    "package": "vsce package",
    "publish": "vsce publish",
    "vscode:prepublish": "pnpm run build",
    "semantic-release": "semantic-release",
    "commit": "cz"
  },
  "dependencies": {
    "ufo": "^1.6.1",
    "uncrypto": "^0.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@evilmartians/lefthook": "^1.13.6",
    "@kong/eslint-config-kong-ui": "^1.5.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@types/node": "~24.8.1",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.3.10",
    "@vscode/vsce": "^3.6.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.38.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "mdc",
    "live preview",
    "portal",
    "dev portal",
    "kong",
    "konnect",
    "documentation"
  ],
  "galleryBanner": {
    "color": "#0044f4",
    "theme": "dark"
  },
  "main": "./dist/extension.cjs",
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:mdc"
  ],
  "pricing": "Free",
  "contributes": {
    "commands": [
      {
        "command": "portalPreview.openPreview",
        "title": "Open Portal Preview",
        "icon": "$(device-desktop)",
        "category": "Portal Preview"
      },
      {
        "command": "portalPreview.refreshPreview",
        "title": "Refresh Portal Preview",
        "icon": "$(refresh)",
        "category": "Portal Preview"
      },
      {
        "command": "portalPreview.configureToken",
        "title": "Configure Konnect Token",
        "icon": "$(key)",
        "category": "Portal Preview"
      },
      {
        "command": "portalPreview.selectPortal",
        "title": "Select Portal",
        "icon": "$(globe)",
        "category": "Portal Preview"
      },
      {
        "command": "portalPreview.clearCredentials",
        "title": "Clear Konnect Credentials",
        "icon": "$(trash)",
        "category": "Portal Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "portalPreview.openPreview",
          "when": "(resourceExtname == .md || resourceExtname == .mdc) && !portalPreview.hasActivePreview",
          "group": "navigation"
        },
        {
          "command": "portalPreview.refreshPreview",
          "when": "(resourceExtname == .md || resourceExtname == .mdc) && portalPreview.hasActivePreview",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "portalPreview.openPreview",
          "when": "(resourceExtname == .md || resourceExtname == .mdc) && !portalPreview.hasActivePreview",
          "group": "portal_preview@1"
        },
        {
          "command": "portalPreview.refreshPreview",
          "when": "(resourceExtname == .md || resourceExtname == .mdc) && portalPreview.hasActivePreview",
          "group": "portal_preview@1"
        }
      ],
      "commandPalette": [
        {
          "command": "portalPreview.openPreview"
        },
        {
          "command": "portalPreview.refreshPreview"
        },
        {
          "command": "portalPreview.configureToken"
        },
        {
          "command": "portalPreview.selectPortal"
        },
        {
          "command": "portalPreview.clearCredentials"
        }
      ]
    },
    "configuration": {
      "title": "Portal Preview",
      "properties": {
        "portalPreview.autoOpen": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open preview when opening MDC/Markdown files"
        },
        "portalPreview.updateDelay": {
          "type": "number",
          "default": 500,
          "minimum": 500,
          "maximum": 3000,
          "description": "Delay in milliseconds before updating preview after content changes"
        },
        "portalPreview.readyTimeout": {
          "type": "number",
          "default": 5000,
          "minimum": 3000,
          "maximum": 10000,
          "description": "Timeout in milliseconds to wait for the Dev Portal to signal that the preview is ready"
        },
        "portalPreview.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for the Portal Preview extension (useful for development and troubleshooting)"
        },
        "portalPreview.showMDCRecommendation": {
          "type": "boolean",
          "default": true,
          "description": "Show recommendation to install MDC extension when opening .mdc files"
        }
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false,
      "jiraOptional": true,
      "jiraLocation": "post-description",
      "jiraPrepend": "[",
      "jiraAppend": "]"
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
