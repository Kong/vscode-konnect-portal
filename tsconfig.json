{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "verbatimModuleSyntax": true,
    "types": ["node", "vscode", "mocha"]
  },
  "include": [
    "src/**/*",
    "*.ts",
    "*.mts",
    "*.cts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
