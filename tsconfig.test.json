{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "out/test/suite",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vscode", "mocha"]
  },
  "include": [
    "src/test/suite/*"
  ]
}
